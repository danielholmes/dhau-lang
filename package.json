{
  "name": "@dhau/lang-extras",
  "version": "0.0.7",
  "type": "module",
  "description": "Various language extensions for JS",
  "sideEffects": false,
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "require.types": "./dist/index.d.cts",
      "import": "./dist/index.js",
      "import.types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "format": "prettier -w \"src/**/*.ts\"",
    "format:check": "prettier -c \"src/**/*.ts\"",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint --ext .ts --fix ./src",
    "lint:check": "eslint --cache --cache-location ./node_modules/.cache/eslint --ext .ts ./src",
    "ts": "tsc --noEmit",
    "jsr:check": "jsr publish --dry-run",
    "publint:check": "publint",
    "attw:check": "attw --pack .",
    "prebuild": "run-p format:check lint:check test:all jsr:check attw:check",
    "build": "tsup",
    "postbuild": "run-p publint:check",
    "publish:npm": "npm publish --access public",
    "publish:jsr": "jsr publish --allow-slow-types",
    "deploy": "run-s build publish:*",
    "test": "mocha -w",
    "test:all": "mocha",
    "prepare": "husky"
  },
  "author": "Daniel Holmes",
  "license": "MIT",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.3",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "chai": "^5.0.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.0.6",
    "jsr": "^0.12.4",
    "lint-staged": "^15.2.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "publint": "^0.2.8",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "tsup": "^8.1.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
