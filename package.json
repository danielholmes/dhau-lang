{
  "name": "@dhau/lang",
  "version": "0.0.6",
  "type": "module",
  "description": "Various language extensions for JS",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf",
    "format": "prettier -w \"src/**/*.ts\"",
    "format:check": "prettier -c \"src/**/*.ts\"",
    "prebuild": "run-p format:check test:all",
    "test": "mocha -w",
    "test:all": "mocha",
    "build": "tsc --outDir dist",
    "npm:publish": "npm publish --access public",
    "deploy": "run-s clean build npm:publish"
  },
  "author": "Daniel Holmes",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  }
}
